{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "sudoku",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": false,
        "startDragging": true
      },
      "process": {
        "exit": true
      }
    },
    "bundle": {
      "active": false,
      "category": "Puzzle Game",
      "copyright": "",
      "externalBin": [],
      "icon": [
        "icons/icon-32.png",
        "icons/icon-128.png",
        "icons/icon-256.png",
        "icons/icon.ico"
      ],
      "identifier": "site.adrianlopez.sudoku",
      "longDescription": "",
      "resources": [],
      "shortDescription": "",
      "targets": ["deb", "appimage", "app", "msi"],
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": []
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "silent": true,
          "type": "offlineInstaller"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "pattern": {
      "use": "brownfield"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Sudoku",
        "decorations": false,
        "fileDropEnabled": false,
        "center": false,
        "focus": true,
        "maximized": false,
        "maxHeight": 640,
        "maxWidth": 360,
        "minHeight": 640,
        "minWidth": 360,
        "height": 640,
        "width": 360
      }
    ]
  }
}
